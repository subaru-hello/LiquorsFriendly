<%= form_with model: [ @liquor, @liquor.comments.build ] do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.select :status, ['public', 'private', 'archived'], tabindex: 1 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
